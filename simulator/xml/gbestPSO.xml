<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="gbest" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1000"/>
        </algorithm>
        <algorithm id="gbest_d" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1000"/>
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <velocityProvider class="pso.velocityprovider.StandardVelocityProvider">
                        <cognitiveAcceleration class="controlparameter.ExponentiallyVaryingControlParameter">
                            <initialValue value="1.5"/>
                            <finalValue value="0.1"/>
                            <curve value="2"/>
                        </cognitiveAcceleration>
                        <socialAcceleration class="controlparameter.ExponentiallyVaryingControlParameter">
                            <initialValue value="1.5"/>
                            <finalValue value="0.1"/>
                            <curve value="2"/>
                        </socialAcceleration>
                    </velocityProvider>
                </entityType>
            </initialisationStrategy>
        </algorithm>
    </algorithms>
    <problems>
        <problem id="griewank" class="problem.FunctionOptimisationProblem" domain="R(-600:600)^2">
            <function class="functions.continuous.unconstrained.Griewank"/>
        </problem>
        <problem id="weierstrass" class="problem.FunctionOptimisationProblem" domain="R(-0.5:0.5)^30">
            <function class="functions.continuous.unconstrained.Weierstrass"/>
        </problem>
    </problems>
    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="1">
        <!--<addMeasurement class="measurement.single.AverageParticleVelocity"/>
        <addMeasurement class="measurement.single.SolutionChange"/>
        <addMeasurement class="measurement.single.pBestChange"/>-->
        <addMeasurement class="measurement.single.ExpectedAverageParticleVelocity"/><!--
        <addMeasurement class="measurement.single.Fitness"/>-->
    </measurements>
    <simulations>
        <!--<simulation samples="35">
            <algorithm idref="gbest"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
	    <output format="TXT" file="data/spherical3.gbest.p20w1.0c1_2c2_2NoVmax.txt" />
        </simulation>-->
        <simulation samples="30">
            <algorithm idref="gbest"/>
            <problem idref="griewank"/>
            <measurements idref="fitness" />
	    <output format="TXT" file="data/griewank_test.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="gbest_d"/>
            <problem idref="griewank"/>
            <measurements idref="fitness" />
	    <output format="TXT" file="data/griewank_test_d.txt"/>
        </simulation>
    </simulations>
</simulator>
